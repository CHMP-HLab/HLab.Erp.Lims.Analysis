                                    StrokeThickness="0.25" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left" 
                                    RenderTransformOrigin="0.5,0.5" 
                                    Fill="{TemplateBinding Background}">
                                    
                                    <Rectangle.RenderTransform>
                                        <TransformGroup>
                                            <TranslateTransform Y="0" X="0"/>
                                        </TransformGroup>
                                    </Rectangle.RenderTransform>
                                    
                                </Rectangle>-->
